<Window x:Class="Hospital.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="LoginWindow" Height="205" Width="236">
    <Grid>
        <Label Content="Вход" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="19,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="19,83,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="mail_f" HorizontalAlignment="Left" Margin="92,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="MailChanged"/>
        <TextBox x:Name="password_f" HorizontalAlignment="Left" Margin="92,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="PasswordChanged"/>
        <Button x:Name="login" Content="Войти" HorizontalAlignment="Left" Margin="19,129,0,0" Width="92" Click="LogIn" Height="20" VerticalAlignment="Top"/>
        <Button x:Name="register" Content="Регистрация" HorizontalAlignment="Left" Margin="126,129,0,0" Click="Register" Width="86" Height="20" VerticalAlignment="Top"/>

    </Grid>
</Window>
